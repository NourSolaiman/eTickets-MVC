<!-- Define model, we are using IEnumerable<T> instead of List<T>,becouse hard coding names in <th> is not option in this case -->
@model IEnumerable<Cinema>

<!-- Define ViewData -->
@{
    ViewData["Titel"] = "List of Cinemas";
}

<!-- Write code -->

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table text-center" >
            <thead>
                <tr class="text-center">
                    
                    <th>@Html.DisplayNameFor(model=>model.Logo)</th> <!--insted of hard coding name in tabel header <th>,we are using Display Name from Actor.cs-->
                    <th>@Html.DisplayNameFor(model=>model.Name)</th>
                    <th>@Html.DisplayNameFor(model=>model.Description)</th>
                    <th>Actions</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) // in this case Model is IEnumerable<Actor>
                {
                    <tr>
                        <td class="align-middle">
                            <!--class="align-middle" is for seting picture in the middle-->
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px" />

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Description)
                        </td>
                        <td class="align-middle">
                            <div>
                                <a class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a class="btn btn-outline-info btn-sm"><i class="bi bi-eye"></i>Details</a>
                                <a class="btn btn-danger text-white btn-sm "><i class="bi bi-trash"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>