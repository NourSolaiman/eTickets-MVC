@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a id="registerLink" class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
    </ul>
}
else
{
    <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a id="registerLink" class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>
        <li class="nav-item"><a id="loginLink" class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}