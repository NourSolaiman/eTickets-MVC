@model Actor

@{
    ViewData["Titel"] = "Delete actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">
             
              

                    <div class="mb-3 text-center">
                    <img id="ProfilePicturePreview" class="border-info rounded-circle" style="width: 150px; height:150px;  border-radius:50%" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProfilePictureURL" class="control-label"></label>
                        <input asp-for="ProfilePictureURL" class="form-control" readonly/>
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <form asp-action="Delete">
                            <input type="hidden"asp-asp-for="Id"/>
                            <input type="submit" value="Confirm" class="btn btn-danger float-end"/>
                    </form>   
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                

            </div>
        </div>

    </div>
</div>
<!-- Here we are writing JS code for,this code is going to listen when ever is new Profile picture URL
created or updated he is going to set value in the ProfilePicturePreview
-->
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}
